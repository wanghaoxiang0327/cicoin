<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/common_dialog" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:padding="@dimen/common_margin">


    <LinearLayout android:layout_height="50dp" android:layout_width="match_parent" android:orientation="horizontal" android:paddingLeft="@dimen/common_margin" android:paddingRight="@dimen/common_margin">

        <TextView android:gravity="center_vertical" android:id="@+id/title_tv" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:text="@string/common_common_dialog_verify_password40" android:textColor="@color/common_text" android:textSize="17sp" android:textStyle="bold"/>

        <TextView android:gravity="center_vertical" android:id="@+id/cancel_tv" android:layout_height="match_parent" android:layout_width="wrap_content" android:text="@string/common_common_dialog_verify_password60" android:textColor="@color/common_hint"/>

    </LinearLayout>

    <View android:background="@color/common_divider" android:layout_height="1dp" android:layout_width="match_parent"/>



    <LinearLayout android:id="@+id/ps_layout" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:paddingLeft="@dimen/common_margin" android:paddingRight="@dimen/common_margin">

        <TextView android:gravity="center_vertical" android:layout_height="50dp" android:layout_width="match_parent" android:text="@string/common_common_dialog_verify_password130" android:textColor="@color/common_text"/>

        <LinearLayout android:background="@drawable/common_edt_line_bg" android:layout_height="50dp" android:layout_width="match_parent" android:orientation="horizontal">

            <EditText android:background="@null" android:hint="@string/common_common_dialog_verify_password170" android:id="@+id/ps_edt" android:inputType="textPassword" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:textColor="@color/common_text" android:textColorHint="@color/common_hint" android:textSize="14sp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout android:id="@+id/sms_layout" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:paddingLeft="@dimen/common_margin" android:paddingRight="@dimen/common_margin">

        <TextView android:gravity="center_vertical" android:layout_height="50dp" android:layout_width="match_parent" android:text="@string/common_common_dialog_verify_password230" android:textColor="@color/common_text"/>

        <LinearLayout android:background="@drawable/common_edt_line_bg" android:layout_height="50dp" android:layout_width="match_parent" android:orientation="horizontal">

            <EditText android:background="@null" android:hint="@string/common_common_dialog_verify_password270" android:id="@+id/sms_code_edt" android:inputType="number" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:textColor="@color/common_text" android:textColorHint="@color/common_hint" android:textSize="14sp"/>

            <TextView android:background="@drawable/common_tip_border_50" android:gravity="center" android:id="@+id/get_code_tv" android:layout_height="32dp" android:layout_width="wrap_content" android:paddingLeft="15dp" android:paddingRight="15dp" android:text="@string/common_baseActivity2" android:textColor="@color/common_tip"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout android:id="@+id/google_layout" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:paddingLeft="@dimen/common_margin" android:paddingRight="@dimen/common_margin">

        <TextView android:gravity="center_vertical" android:layout_height="50dp" android:layout_width="match_parent" android:text="@string/common_common_dialog_verify_password350" android:textColor="@color/common_text"/>

        <LinearLayout android:background="@drawable/common_edt_line_bg" android:layout_height="50dp" android:layout_width="match_parent" android:orientation="horizontal">

            <EditText android:background="@null" android:hint="@string/common_common_dialog_verify_password390" android:id="@+id/google_code_edt" android:inputType="number" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:textColor="@color/common_text" android:textColorHint="@color/common_hint" android:textSize="14sp"/>

            <TextView android:gravity="center" android:id="@+id/past_tv" android:layout_height="32dp" android:layout_width="wrap_content" android:paddingLeft="15dp" android:paddingRight="15dp" android:text="@string/common_common_dialog_verify_password410" android:textColor="@color/common_tip"/>
        </LinearLayout>


    </LinearLayout>

    <Button android:background="@drawable/common_tip_50" android:id="@+id/submit" android:layout_height="45dp" android:layout_marginBottom="10dp" android:layout_marginTop="30dp" android:layout_width="match_parent" android:text="@string/common_common_dialog_verify_password450" android:textColor="@color/common_button_text"/>
</LinearLayout>
