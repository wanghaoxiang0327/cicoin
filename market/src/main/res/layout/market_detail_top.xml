<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@mipmap/market_deapth_bg">

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="0.0000"
        android:textColor="@color/market_green"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/market_high"
        android:textColor="@color/common_hint"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_high"
        app:layout_constraintEnd_toStartOf="@+id/tv_high" />

    <TextView
        android:id="@+id/tv_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:text="0.0000"
        android:textColor="@color/common_hint"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_price"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tv_change_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="+0.00%"
        android:textColor="@color/market_green"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCny"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="18dp"
        android:src="@mipmap/market_rise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_change_rate" />

    <TextView
        android:id="@+id/tvCny"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="â‰ˆ0.00 CNY"
        android:textColor="@color/common_hint"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_change_rate"
        app:layout_constraintStart_toStartOf="@+id/tv_price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="@string/market_low"
        android:textColor="@color/common_hint"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_low"
        app:layout_constraintTop_toBottomOf="@+id/tv_high" />

    <TextView
        android:id="@+id/tv_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:text="0.0000"
        android:textColor="@color/common_hint"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_high"
        app:layout_constraintStart_toStartOf="@+id/tv_high"
        app:layout_constraintTop_toBottomOf="@+id/tv_high" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="@string/market_amount"
        android:textColor="@color/common_hint"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_low"
        app:layout_constraintTop_toBottomOf="@+id/tv_low" />

    <TextView
        android:id="@+id/tv_the_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:text="0.0000"
        android:textColor="@color/common_hint"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_high"
        app:layout_constraintStart_toStartOf="@+id/tv_high"
        app:layout_constraintTop_toBottomOf="@+id/tv_low" />

</android.support.constraint.ConstraintLayout>
