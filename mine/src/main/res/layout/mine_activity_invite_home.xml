<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical">

    <com.sskj.common.view.ToolBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_color="@color/common_action_bar"
        app:title="@string/mine_invite_title"
        app:title_color="@color/common_text_sun" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/mine_yqfy_img" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/common_text_sun"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/common_text_sun"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/common_text_sun"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/mine_yqfy_ljkh"
            android:textColor="@color/common_hint"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/mine_yqfy_jrsy"
            android:textColor="@color/common_hint"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/mine_yqfy_ljsy"
            android:textColor="@color/common_hint"
            android:textSize="12sp" />
    </LinearLayout>

    <com.allen.library.SuperTextView
        android:id="@+id/sp1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:sBackgroundDrawableRes="@color/white"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineHeight="1dp"
        app:sDividerLineType="bottom"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="15sp"
        app:sLeftTextString="@string/mine_wdtg"
        app:sRightIconRes="@mipmap/common_arrow_right"
        app:sUseRipple="false" />

    <com.allen.library.SuperTextView
        android:id="@+id/sp2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sBackgroundDrawableRes="@color/white"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineHeight="1dp"
        app:sDividerLineType="bottom"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="15sp"
        app:sLeftTextString="@string/mine_wdkf"
        app:sRightIconRes="@mipmap/common_arrow_right"
        app:sUseRipple="false" />

    <com.allen.library.SuperTextView
        android:id="@+id/sp3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sBackgroundDrawableRes="@color/white"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineHeight="1dp"
        app:sDividerLineType="bottom"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="15sp"
        app:sLeftTextString="@string/mine_yjmx"
        app:sRightIconRes="@mipmap/common_arrow_right"
        app:sUseRipple="false" />

</LinearLayout>