<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical">


    <com.sskj.common.view.ToolBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_color="@color/common_white"
        app:left_img="@mipmap/common_icon_back"
        app:title="@string/mine_mine_activity_security20"
        app:titleTextColor="@color/common_text_sun"
        app:title_color="@color/common_text_sun" />


    <TextView
        android:paddingTop="17dp"
        android:id="@+id/gradle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="安全级别：低"
        android:textColor="#2e6afe"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp">

        <ProgressBar
            android:id="@+id/jb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:max="100"
            android:progress="10"
            android:progressDrawable="@drawable/mine_secry"
            android:translationZ="0pt" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:text="请至少开启两项安全验证"
        android:textColor="#2e6afe"
        android:textSize="10sp" />


    <com.allen.library.SuperTextView
        android:id="@+id/menu_sms_verify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/common_white"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineHeight="1dp"
        app:sDividerLineType="bottom"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="手机"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTextString="已绑定"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right"
        app:sUseRipple="false" />


    <com.allen.library.SuperTextView
        android:id="@+id/menu_email_verify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/white"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineHeight="1dp"
        app:sDividerLineType="bottom"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="邮箱"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTextString="1251115115@qq.com"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right"
        app:sUseRipple="false" />

    <com.allen.library.SuperTextView
        android:id="@+id/menu_google_verify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/white"
        app:sDividerLineHeight="1dp"
        app:sDividerLineType="bottom"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="@string/mine_verify4"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right"
        app:sUseRipple="false" />

    <com.allen.library.SuperTextView
        android:id="@+id/menu_user_verify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/white"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineType="none"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="身份认证"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:text="其他设置"
        android:textColor="@color/common_text"
        android:textSize="14sp" />

    <com.allen.library.SuperTextView
        android:id="@+id/menu_login_ps"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/common_white"
        app:sDividerLineColor="@color/common_background"
        app:sDividerLineHeight="1dp"
        app:sDividerLineType="bottom"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="@string/mine_mine_activity_security120"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTextString="@string/mine_change"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right"
        app:sUseRipple="false" />

    <com.allen.library.SuperTextView
        android:id="@+id/menu_pay_ps"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/common_white"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineType="none"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="@string/mine_mine_activity_reset_pa_ypassword130"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right"
        app:sUseRipple="false" />


</LinearLayout>
