<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/common_action_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin">

        <ImageView
            android:id="@+id/left_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingTop="18dp"
            android:paddingRight="18dp"
            android:paddingBottom="18dp"
            android:src="@mipmap/icon_back" />

        <com.sskj.common.tab.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            app:indicator_color="@color/common_tip"
            app:indicator_width="30dp"
            app:selctTextSize="18sp"
            app:tabSelectedTextColor="@color/common_tip"
            app:textUnselectColor="@color/common_hint"
            app:textsize="18sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/news_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>