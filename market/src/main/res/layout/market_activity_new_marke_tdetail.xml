<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_dark"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingTop="25dp">


    <com.sskj.common.view.ToolBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_img="@mipmap/common_icon_back"
        app:title_color="@color/common_white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_make_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_red_bg_5"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/common_make_more"
            android:textColor="@color/common_white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_make_empty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/common_green_bg_5"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/common_make_empty"
            android:textColor="@color/common_white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
</LinearLayout>