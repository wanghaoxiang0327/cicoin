<?xml version="1.0" encoding="utf-8" standalone="no"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_background"
    android:paddingBottom="@dimen/common_margin"
    android:paddingTop="@dimen/common_margin">

    <ImageView
        android:id="@+id/coin_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:src="@mipmap/common_icon_btc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/common_text"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/coin_icon"
        app:layout_constraintStart_toEndOf="@+id/coin_icon"
        app:layout_constraintTop_toTopOf="@+id/coin_icon"
        tools:text="BTC" />


    <TextView
        android:id="@+id/asset_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/asset_asset_activity_withdraw60"
        android:textColor="@color/common_hint"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/coin_name"
        app:layout_constraintTop_toBottomOf="@+id/coin_name" />

    <TextView
        android:id="@+id/asset_frost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/common_text"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/asset_textview5"
        app:layout_constraintStart_toEndOf="@+id/asset_textview5"
        tools:text="0.0031" />


    <TextView
        android:id="@+id/asset_textview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/asset_asset_item_asset100"
        android:textColor="@color/common_hint"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/asset_useful"
        app:layout_constraintStart_toEndOf="@+id/asset_barrier" />

    <TextView
        android:id="@+id/asset_useful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/common_text"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/asset_textview3"
        app:layout_constraintStart_toEndOf="@+id/asset_textview3"
        tools:text="0.0031" />




    <android.support.constraint.Guideline
        android:id="@+id/asset_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>
