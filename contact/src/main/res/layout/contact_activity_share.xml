<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/contact_share_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_above="@+id/ll_des">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="202dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/common_tip_15"
                android:gravity="center"
                android:text="@string/contact_share_des"
                android:textColor="@color/common_white"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/ll_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_share_profit_amount"
                        android:textColor="@color/common_dark"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_market_more_or_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/common_green_bg_5"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="@string/common_make_more"
                        android:textColor="@color/common_white"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/common_green"
                    android:textSize="25sp"
                    tools:text="185256sd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_amount"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_coin_name_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_share_usdt_contract"
                        android:textColor="@color/common_green"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_coin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/sp_12"
                        tools:text="EOS/USDT" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_coin_count_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_contact_dialog_create_order230"
                        android:textColor="@color/common_green"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_coin_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/sp_12"
                        tools:text="20.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_price_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_share_opening_price"
                        android:textColor="@color/common_green"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_open_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/sp_12"
                        tools:text="3.75" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="15dp"
                        android:background="@color/common_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="@string/contact_share_king_of_contract"
                        android:textColor="@color/common_white"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/contact_share_right_of_interpretation"
                    android:textColor="@color/common_white"
                    android:textSize="7sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_share_code"
                android:layout_width="56dp"
                android:layout_height="56dp" />

        </LinearLayout>
    </RelativeLayout>

    <com.sskj.common.view.ToolBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:right_text="@string/contact_save_pic"
        app:right_text_color="@color/common_white" />
</RelativeLayout>