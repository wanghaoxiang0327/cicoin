<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.sskj.common.view.ToolBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_color="@color/common_action_bar"
        app:title="@string/mine_mine_activity_bind_googl_everify20"
        app:title_color="@color/common_text_sun" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/common_background" />

            <TextView
                android:id="@+id/verify_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:text="@string/mine_mine_activity_bind_googl_everify40"
                android:textColor="@color/common_hint"
                android:textSize="12sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_mine_activity_bind_googl_everify60"
                android:textColor="@color/common_text"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/qr_code_img"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin">

                <TextView
                    android:id="@+id/google_code"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColor="@color/common_text"
                    android:textSize="14sp"
                    tools:text="RIOXOGNG3F4DX" />

                <TextView
                    android:id="@+id/copy_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/mine_mine_activity_bind_googl_everify140"
                    android:textColor="@color/common_tip" />
            </LinearLayout>


            <TextView
                android:id="@+id/verify_code_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:text="@string/mine_mine_activity_bind_googl_everify170"
                android:textColor="@color/common_text"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/edt_verify_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:background="@drawable/common_edt_border_bg"
                android:gravity="center_vertical"
                android:hint="@string/mine_mine_activity_bind_googl_everify190"
                android:paddingLeft="16dp"
                android:textColor="@color/common_text"
                android:textColorHint="@color/common_hint"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:text="@string/mine_mine_activity_bind_googl_everify10"
                android:textColor="@color/common_text"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin">

                <EditText
                    android:id="@+id/edt_verify_mobile"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_edt_border_bg"
                    android:gravity="center_vertical"
                    android:hint="@string/mine_mine_activity_bind_googl_everify19"
                    android:paddingLeft="16dp"
                    android:textColor="@color/common_text"
                    android:textColorHint="@color/common_hint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/get_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="@string/mine_mine_activity_bind_mobile_or_email140"
                    android:textColor="#2e6afe" />
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="40dp"
                android:layout_marginRight="@dimen/common_margin"
                android:background="@drawable/common_tip_50"
                android:text="@string/mine_mine_activity_bind_googl_everify210"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
