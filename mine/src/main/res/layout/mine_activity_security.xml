<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical">


    <com.sskj.common.view.ToolBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_color="@color/common_background"
        app:titleTextColor="@color/common_white"
        app:title_color="@color/common_white"
        app:title="@string/mine_mine_activity_security20" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin"
        android:text="@string/mine_mine_activity_security40"
        android:textColor="@color/common_hint"
        android:textSize="13sp" />

    <com.allen.library.SuperTextView
        android:id="@+id/menu_sms_verify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/common_background"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineType="bottom"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="@string/mine_verify2"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right" />


    <com.allen.library.SuperTextView
        android:id="@+id/menu_google_verify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/common_background"
        app:sDividerLineType="none"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="@string/mine_verify4"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right" />


    <com.allen.library.SuperTextView
        android:id="@+id/menu_email_verify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="5dp"
        android:paddingLeft=  "@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/common_background"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineType="none"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="@string/mine_verify6"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right" />


    <com.allen.library.SuperTextView
        android:id="@+id/menu_login_ps"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/common_background"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineType="bottom"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="@string/mine_mine_activity_security120"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTextString="@string/mine_change"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right" />

    <com.allen.library.SuperTextView
        android:id="@+id/menu_pay_ps"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:sBackgroundDrawableRes="@color/common_background"
        app:sDividerLineColor="@color/common_divider"
        app:sDividerLineType="none"
        app:sLeftTextColor="@color/common_text"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="@string/mine_mine_activity_reset_pa_ypassword130"
        app:sRightTextColor="@color/common_hint"
        app:sRightTextSize="14sp"
        app:sRightTvDrawableRight="@mipmap/common_arrow_right" />


</LinearLayout>
