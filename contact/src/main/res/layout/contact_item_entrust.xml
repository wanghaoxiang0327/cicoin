<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:orientation="vertical"
    android:padding="@dimen/common_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/common_red"
            tools:text="@string/common_make_more" />


        <TextView
            android:id="@+id/tv_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/common_text"
            tools:text="ETH/USDT" />


        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/common_hint"
            android:textSize="12sp"
            tools:text="11-05 15:25" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_divider" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TableRow
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/contact_contact_item_entrust280"
                android:textColor="@color/common_hint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_create_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/common_text"
                android:textSize="12sp"
                tools:text="@string/contact_dealFragment7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/contact_contact_item_entrust210"
                android:textColor="@color/common_hint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/common_text"
                android:textSize="12sp"
                tools:text="100" />
        </TableRow>

        <TableRow
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/contact_contact_item_deal480"
                android:textColor="@color/common_hint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/common_text"
                android:textSize="12sp"
                tools:text="30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/contact_contact_dialog_create_order300"
                android:textColor="@color/common_hint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/common_text"
                android:textSize="12sp"
                tools:text="100" />
        </TableRow>

        <TableRow
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/contact_contact_item_entrust390"
                android:textColor="@color/common_hint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_win_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/common_text"
                android:textSize="12sp"
                tools:text="100.00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/contact_contact_item_entrust430"
                android:textColor="@color/common_hint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_loss_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/common_text"
                android:textSize="12sp"
                tools:text="100.00" />
        </TableRow>

        <TableRow
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/contact_contact_dialog_create_order340"
                android:textColor="@color/common_hint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_leverage_multiple"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/common_text"
                android:textSize="12sp"
                tools:text="30" />
        </TableRow>

        <TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="55dp"
                android:layout_height="26dp"
                android:background="@drawable/common_tip_border_gray_50"
                android:text="@string/contact_contact_item_entrust100"
                android:textColor="@color/common_hint" />
        </TableRow>

    </TableLayout>

</LinearLayout>
