<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_dark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/market_data"
            android:textColor="@color/common_hint"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDirection"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tvSell"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/market_direction"
            android:textColor="@color/common_hint"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="@string/market_price"
            android:textColor="@color/common_hint"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="@string/market_count"
            android:textColor="@color/common_hint"
            android:textSize="12sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>