<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <shape>
            <gradient
                android:centerColor="#f1f3f6"
                android:endColor="#f1f3f6"
                android:startColor="#f1f3f6" />

        </shape>

    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="#2e6afe"
                    android:endColor="#2e6afe"
                    android:startColor="#2e6afe" />
            </shape>
        </clip>
    </item>

</layer-list>