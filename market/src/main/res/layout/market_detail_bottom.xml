<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.sskj.common.tab.TabLayout
        android:id="@+id/bootmTabLyout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/common_item_divider"
        app:indicator_color="@color/common_action_text"
        app:indicator_height="1dp"
        app:indicator_width="40dp"
        app:textSelectColor="@color/common_action_text"
        app:textUnselectColor="@color/common_hint" />


    <FrameLayout
        android:id="@+id/order_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>