<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_dark"
    android:orientation="vertical">


    <com.sskj.common.view.ToolBarLayout
        android:id="@+id/tbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_color="@color/common_white"
        android:layout_marginBottom="5dp"
        app:background_color="@color/common_action_bar"
        app:title="@string/asset_asset_activity_transfer_records20" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/records_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
