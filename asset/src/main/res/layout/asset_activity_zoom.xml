<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_background"
    android:orientation="vertical">

    <com.sskj.common.view.ToolBarLayout
        app:background_color="@color/common_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_color="@color/common_white"
        app:title="@string/asset_account_transfer"
        app:right_img="@mipmap/asset_icon_history"/>
<!--<View-->
    <!--style="@style/common_whiteview10"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/common_margin"
            android:orientation="horizontal">
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@color/common_tip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/asset_zoom_from"
                android:textColor="@color/common_normal_text"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/acount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/asset_fragment_assetaccount2"
                android:textColor="@color/common_white"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
            <!--<View-->
                <!--style="@style/common_linview1"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/common_margin"
                android:orientation="horizontal">
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/common_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/asset_zoom_to"
                    android:textColor="@color/common_normal_text"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/acount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/asset_fragment_assetaccount1"
                    android:textColor="@color/common_white"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/asset_transfer_h"/>
        </RelativeLayout>
    </LinearLayout>
    <!--<View-->
        <!--style="@style/common_whiteview10"/>-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_margin="@dimen/common_margin"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asset_asset_fragment_asset20"
        android:textColor="@color/common_normal_text"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asset_zoom_useable"
        android:layout_alignParentRight="true"
        android:textColor="@color/common_normal_text"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USDT"
        android:layout_below="@id/tv1"
        android:textColor="@color/common_white"/>
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv2"
        android:layout_alignParentRight="true"
        android:textColor="@color/common_white"/>
</RelativeLayout>
    <!--<View-->
        <!--style="@style/common_linview1"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/common_margin"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_white"
            android:text="@string/asset_zoom_number"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edt_input_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/asset_zoom_number_hint"
                android:textColorHint="@color/common_normal_text"
                android:textColor="@color/common_white"
                android:background="@color/common_background"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/common_white"
                android:text="USDT"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@color/common_tip"/>
            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textColor="@color/common_tip"
                android:text="@string/asset_assetRecordsActivity1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/common_dark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asset_zoom_tip"
            android:textColor="@color/common_normal_text"
            android:layout_margin="@dimen/common_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="@dimen/common_margin"
            android:background="@drawable/common_tip_50"
            android:text="@string/asset_asset_activity_transfer300"
            android:textColor="@color/common_button_text" />
    </LinearLayout>
</LinearLayout>